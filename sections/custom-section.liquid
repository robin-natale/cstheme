<link rel="stylesheet" href="{{ 'section-custom-section.css' | asset_url }}" media="print" onload="this.media='all'">

<section class="custom-section">
    <h4>Frontpage Products</h4>
    {% for p in collections.frontpage.products %}
        <h6> {{ p .id }} - {{ p.title }} - {{ p.handle }} </h6>
    {% endfor %}
    <button id="custom-section-btn">Hello there</button>
    <h2> {{ section.settings.custom_text_title }} </h2>
    <div>{{ section.settings.custom_text_body }}</div>
</section>

{% schema %}
{
    "name": "My Custom Section",
    "settings": [
        {
            "id": "custom_text_title",
            "type": "text",
            "label": "Text box heading",
            "default": "Title",
            "info": "Just a simple title"
        },
        {
            "type": "checkbox",
            "id": "custom_checkbox",
            "label": "Show announcement",
            "default": true
        },
        {
            "id": "custom_text_body",
            "type": "richtext",
            "label": "Add custom text below",
            "default": "<p>Add your text here</p>"
        },
        {
            "type": "collection",
            "id": "featured_collection",
            "label": "Featured collection"
        }
    ],
    "presets": [
        {
            "name": "My Custom Section",
            "category": "Custom"
        }
    ]
}
{% endschema %}

